<style>
  
  #sections-ai-sa-video-{{ section.id }}.sections-ai-sa-video-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  

  #sections-ai-sa-video-{{ section.id }} .sections-ai-sa-video {
    position: relative;
    margin: 0 auto;
    max-width: 100%;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sections-ai-sa-video-{{ section.id }} .sections-ai-sa-video>.sections-ai-sa-video-container {
    display: grid;
    align-items: center;
    position: relative;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0;
    z-index: 4;
  }

  .sections-ai-sa-video-content {
    z-index: 3;
    padding: 0 25px 0 25px;
    max-width: 60%;
  }

  @media only screen and (max-width: 800px) {
    .sections-ai-sa-video-content {
      padding: 0 10px 0 10px;
      max-width: calc(100% - 20px);
    }
  }

  #sections-ai-sa-video-{{ section.id }} .sections-ai-sa-video video {
    width: 100%;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sections-ai-sa-video-{{ section.id }}" class="sections-ai-sa-video-wrap">
<div class="sections-ai-sa-video">
     
  <div class="sections-ai-sa-video-container">
    {{
      section.settings.video
      | video_tag:
        image_size: '1100x',
        playsinline: section.settings.video_inline,
        autoplay: section.settings.video_autoplay,
        loop: section.settings.video_loop,
        controls: section.settings.video_controls,
        muted: section.settings.video_muted
    }}
  </div>

</div>

</div>

{% schema %}
  {
    "name": "Video Standalone",
    "settings": [
      {
        "type": "header",
        "content": "Colors",
        "info": "Set colors for the section."
      },
      {
        "type": "color_background",
        "id": "background_color",
        "default": "linear-gradient(164deg, #fff 0%, #fff 0%)",
        "label": "Background"
      },
      {
        "type": "header",
        "content": "Dimensions",
        "info": "Set the section dimensions in pixels."
      },
      {
        "type": "number",
        "id": "max_width",
        "default": 3000,
        "label": "Max Width of Section"
      },
      {
        "type": "number",
        "id": "padding_top",
        "default": 25,
        "label": "Padding Top"
      },
      {
        "type": "number",
        "id": "padding_bottom",
        "default": 25,
        "label": "Padding Bottom"
      },
      {
        "type": "number",
        "id": "padding_left",
        "default": 10,
        "label": "Padding Left"
      },
      {
        "type": "number",
        "id": "padding_right",
        "default": 10,
        "label": "Padding Right"
      },
      {
        "type": "header",
        "content": "Video",
        "info": "Setup the video"
      },
      {
        "type": "video",
        "id": "video",
        "label": "Hero Video"
      },
      {
        "type": "checkbox",
        "id": "video_inline",
        "label": "Play Inline",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "video_autoplay",
        "label": "Autoplay",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "video_loop",
        "label": "Loop Video",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "video_controls",
        "label": "Show Video Controls",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "video_muted",
        "label": "Mute Video",
        "default": true
      }
    ],
	"blocks": [],
	"presets": [
      {
        "name": "Video Standalone",
        "category": "Custom"
      }
    ]
  }
{% endschema %}