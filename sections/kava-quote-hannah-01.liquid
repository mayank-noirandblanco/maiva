 {% assign sec_id = section.id | slice: -6, 6 | replace: '-', '_' %}
{% assign sec_id = sec_id | prepend: 'pw' %}

{%- style -%}

*, *:after, *:before {
  box-sizing: border-box;
}

img {
  max-width: 100%;
  height: auto;
}

.pw-container,
.pw-container-fluid {
  width: 100%;
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
  margin-right: auto;
  margin-left: auto;
}

@media (min-width: 576px) {
  .pw-container {
    max-width: 540px;
  }
}

@media (min-width: 750px) {
  .pw-container {
    max-width: 720px;
  }
}

@media (min-width: 992px) {
  .pw-container {
    max-width: 960px;
  }
  {% if section.settings.container_max_width >= 720 and section.settings.container_max_width <= 960 %}
    .pw-section__{{sec_id}} .pw-container {
      max-width: {{section.settings.container_max_width}}px;
    }
  {% endif %}
}

@media (min-width: 1200px) {
  .pw-container {
    max-width: 1140px;
  }
  {% if section.settings.container_max_width >= 720 and section.settings.container_max_width <= 1140 %}
    .pw-section__{{sec_id}} .pw-container {
      max-width: {{section.settings.container_max_width}}px;
    }
  {% endif %}
}

@media (min-width: 1400px) {
  .pw-container {
    max-width: 1320px;
  }
  {% if section.settings.container_max_width >= 720 and section.settings.container_max_width != 1320 %}
    .pw-section__{{sec_id}} .pw-container {
      max-width: {{section.settings.container_max_width}}px;
    }
  {% endif %}
}

.pw-container,
.pw-container-fluid {
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
}

.pw-section__{{sec_id}} .pw-row {
  display: flex;
  flex-wrap: wrap;
  margin-right: calc(var(--pw-gutter-x, 15px) * -1);
  margin-left: calc(var(--pw-gutter-x, 15px) * -1);
}

.pw-section__{{sec_id}} .pw-row > * {
  box-sizing: border-box;
  flex-shrink: 0;
  width: 100%;
  max-width: 100%;
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
}

@media (min-width: 750px) {
  .pw-section__{{sec_id}} .pw-col-md-4 {
    flex: 0 0 auto;
    width: 33.3333333%;
  }
  .pw-section__{{sec_id}} .pw-col-md-8 {
    flex: 0 0 auto;
    width: 66.66666667%;
  }
}

@media (min-width: 992px) {
  .pw-section__{{sec_id}} .pw-col-lg-3 {
    flex: 0 0 auto;
    width: 25%;
  }
  .pw-section__{{sec_id}} .pw-col-lg-7 {
    flex: 0 0 auto;
    width: 58.33333333%;
  }
  .pw-section__{{sec_id}} .pw-col-lg-10 {
    flex: 0 0 auto;
    width: 83.33333333%;
  }
  .pw-section__{{sec_id}} .pw-offset-lg-1 {
    margin-left: 8.33333333%;
  }
}

.pw-section__{{sec_id}} {
  --pw-gutter-x: 25px;
  color: {{section.settings.text_color}};
  background-color: {{section.settings.background_color}};
  {% if section.settings.section_height == true %}
    min-height: 100vh;
  {% endif %}
  padding-top: {{section.settings.section_padding_top}}px;
  padding-bottom: {{section.settings.section_padding_bottom}}px;
  display: flex;
  align-items: center;
  line-height: 1.5;
}

.pw-section__{{sec_id}} .pw-section-title::before,
.pw-section__{{sec_id}} .pw-section-title::after {
  display: none;
}

.pw-section__{{sec_id}} .pw-section-title {
  color: {{section.settings.text_color}};
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 30px;
  position: relative;
  text-align: left;
}

.pw-section__{{sec_id}} .pw-section-text {
  color: {{section.settings.text_color}};
  margin: 0;
  padding-left: 0;
  font-style: normal;
  border-left: 0;
  border: none;
  width: 100%;
  text-align: left;
}

.pw-section__{{sec_id}} .pw-section-text p {
  color: {{section.settings.text_color}};
  margin-top: 0;
}

.pw-section__{{sec_id}} .pw-quote-author {
  color: {{section.settings.text_color}};
  text-align: center;
  padding: 20px 0;
}

.pw-section__{{sec_id}} .pw-quote-author-photo {
  width: 185px;
  height: 185px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 20px;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.pw-section__{{sec_id}} .pw-quote-author-photo img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  -o-object-fit: cover;
  object-fit: cover;
}

.pw-section__{{sec_id}} .pw-quote-author-name {
  font-weight: 700;
}


{% if section.settings.inherit_fonts == false %}
  .pw-section__{{sec_id}} .pw-quote-author-name {
    font-size: 24px;
  }
  .pw-section__{{sec_id}} .pw-quote-author-position {
    font-size: 18px;
  }
  .pw-section__{{sec_id}} h1.pw-section-title {
    font-size: 72px;
  }
  .pw-section__{{sec_id}} h2.pw-section-title {
    font-size: 56px;
  }
  .pw-section__{{sec_id}} h3.pw-section-title {
    font-size: 32px;
  }
  .pw-section__{{sec_id}} .pw-section-text p {
    font-size: 24px; margin-bottom: 24px;
  }
{% endif %}

@media only screen and (max-width: 749px) {
  .pw-section__{{sec_id}} {
    min-height: auto;
    padding-top: {{section.settings.section_padding_top_mobile}}px;
    padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
  }
  {% if section.settings.inherit_fonts == false %}
    .pw-section__{{sec_id}} .pw-quote-author-name {
      font-size: 20px;
    }
    .pw-section__{{sec_id}} .pw-quote-author-position {
      font-size: 16px;
    }
    .pw-section__{{sec_id}} h1.pw-section-title {
      font-size: 50px;
    }
    .pw-section__{{sec_id}} h2.pw-section-title {
      font-size: 40px;
    }
    .pw-section__{{sec_id}} h3.pw-section-title {
      font-size: 26px;
    }
    .pw-section__{{sec_id}} .pw-section-text p {
      font-size: 20px;
    }
  {% endif %}
}

{%- endstyle -%}

{% if section.settings.custom_css != blank %}
  {%- style -%}
  {{section.settings.custom_css}}
  {%- endstyle -%}
{% endif %}

<div class="pw-section__{{sec_id}} {{ section.settings.custom_class }}">
  <div class="pw-container">
    <div class="pw-row">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
          {% if block.settings.heading_text != blank %}
            <div class="pw-col-lg-10 pw-offset-lg-1" {{ block.shopify_attributes }}>
              <{{ block.settings.heading_tag }} class="pw-section-title" style="text-align: {{block.settings.text_align}};">
              {{ block.settings.heading_text | escape }}
              </{{ block.settings.heading_tag }}>
            </div>
          {% endif %}

          {% when 'text' %}
          {% if block.settings.section_text != blank %}
            <div class="pw-col-lg-7 pw-offset-lg-1 pw-col-md-8" {{ block.shopify_attributes }}>
               <blockquote class="pw-section-text">
                {{ block.settings.section_text }}
              </blockquote>
            </div>
          {% endif %}

          {% when 'author' %}
          <div class="pw-col-lg-3 pw-col-md-4" {{ block.shopify_attributes }}>
            <div class="pw-quote-author">

              {% if block.settings.quote_author_image == blank %}
                <div class="pw-quote-author-photo">
                  <img src="https://cdn.shopify.com/s/files/1/0560/8249/7605/files/quote-hannah-01.png" 
                    sizes="(min-width: 750px) 750px"
                    {% if section.settings.lazyload == true %} loading="lazy" {% endif %}
                    width="100%"
                    height="100%"
                  />
                </div>
              {% else %}
                <div class="pw-quote-author-photo">
                  <img srcset="
                  {%- if block.settings.quote_author_image >= 750 -%}{{ block.settings.quote_author_image | img_url: '750x' }} 750w,{%- endif -%}"
                    src="{{ block.settings.quote_author_image | img_url: '750x' }}"
                    alt="{{ block.settings.quote_author_image.alt | escape }}"
                    sizes="(min-width: 750px) 750px"
                    width="100%"
                    height="100%"
                    {% if section.settings.lazyload == true %} loading="lazy" {% endif %}
                  >
                </div>
              {% endif %}

              {% if block.settings.quote_author != blank %}
                 <div class="pw-quote-author-name">
                  {{ block.settings.quote_author | escape }}
                </div>
              {% endif %}

              {% if block.settings.quote_author_position != blank %}
                <div class="pw-quote-author-position">
                  {{ block.settings.quote_author_position | escape }}
                </div>
              {% endif %}
            </div>
          </div>

        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}

{
  "name": "[Kava] Quote-Hannah-01",
  "tag": "section",
  "class": "kava-quote kava-quote-hannah-01",
  "settings": [
    {
      "type": "header",
      "content": "Main settings"
    }, 
    {
      "type": "checkbox",
      "id": "inherit_fonts",
      "default": false,
      "label": "Inherit font sizes from theme"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#262424"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    },
    {
      "type": "header",
      "content": "Desktop"
    }, 
    {
      "type": "checkbox",
      "id": "section_height",
      "default": false,
      "label": "Full screen height"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Section padding-top",
      "default": 100
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Section padding-bottom",
      "default": 100
    }, 
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "section_padding_top_mobile",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Section padding-top",
      "default": 50
    },
    {
      "type": "range",
      "id": "section_padding_bottom_mobile",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Section padding-bottom",
      "default": 50
    },
     {
      "type": "header",
      "content": "Customization"
    }, 
    {
      "type": "number",
      "id": "container_max_width",
      "label": "Content width limit (px)",
      "default": 1320
    }, 
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom сlass"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    },
    {
      "type": "checkbox",
      "id": "lazyload",
      "default": true,
      "label": "Lazyload images"
    }
  ],
  "blocks": [
    {
      "name": "Heading",
      "type": "heading",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "heading_text",
          "label": "Heading text"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Heading tag",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            }, {
              "value": "h2",
              "label": "H2"
            }, {
              "value": "h3",
              "label": "H3"
            }
          ],
          "default": "h2"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Heading alignment",
          "options": [
              {
              "value": "left",
              "label": "Left"
              }, {
              "value": "center",
              "label": "Center"
              }
          ],
          "default": "left"
        }
      ]
    },
    {
      "name": "Text",
      "type": "text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "section_text",
          "label": "Section text",
          "default": "<p>Section text</p>"
        }
      ]
    },
    {
      "name": "Author",
      "type": "author",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "quote_author_image",
          "label": "Author photo"
        },
        {
          "type": "text",
          "id": "quote_author",
          "label": "Quote Author",
          "default": "Quote Author"

        },
        {
          "type": "text",
          "id": "quote_author_position",
          "label": "Quote Author position",
          "default": "Author position"
        }

      ]
    }
  ],
  "presets": [
    {
      "name": "[Kava] Quote-Hannah-01",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "section_text": "<p>What is it they say? That good design is invisible?</p><p>That’s what we need to remember when designing key user interfaces for e-commerce websites. Of course, your store must be attractive and memorable, but the UI elements that move shoppers through the site should not make them pause. Simplicity and ease of use must be your priority when designing the main journey for your client’s shoppers.</p>"
          }
        },
        {
          "type": "author",
          "settings": {
            "quote_author": "Suzanne Scacca",
            "quote_author_position": "Agency Manager"
          }
        }
      ]
    }
  ]
  
}

{% endschema %}