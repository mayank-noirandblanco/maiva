<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sections-ai-feature-{{ section.id }}.sections-ai-feature-wrap p,
  #sections-ai-feature-{{ section.id }}.sections-ai-feature-wrap p a {
    font-size: {{ section.settings.text_size }};
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sections-ai-feature-{{ section.id }}.sections-ai-feature-wrap h2 {
    font-size: {{ section.settings.headline_size }};
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }

  #sections-ai-feature-{{ section.id }}.sections-ai-feature-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }


  #sections-ai-feature-{{ section.id }} .sections-ai-feature {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sections-ai-feature-{{ section.id }}  .sections-ai-feature .sections-ai-feature-grid {
    display: grid;
    align-items: center;
    gap: {{ section.settings.grid_gap}}px;
    position: relative;
    z-index: 2;
  }

  @media only screen and (min-width: 801px) {
    .sections-ai-feature .sections-ai-feature-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    .sections-ai-feature .sections-ai-feature-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sections-ai-feature-{{ section.id }}  .sections-ai-feature .sections-ai-feature-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
    transition: all .5s;
  }

  #sections-ai-feature-{{ section.id }}  .sections-ai-feature-col:hover .sections-ai-feature-cover {
    opacity: {{section.settings.cover_opacity | plus: 15 }}%;
  }

  .sections-ai-feature-col {
    position: relative;
    min-height: 250px;
    padding: 0;
    overflow: hidden;
  }

  .sections-ai-feature-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    transition: all .5s;
  }

  .sections-ai-feature-col:hover .sections-ai-feature-img {
    transform: scale(1.2);
  }
  
  .sections-ai-feature-content {
    z-index: 3;
    padding: 15px;
    background-size: cover;
    background-position: center;
    position: absolute;
    bottom: 0;
    left: 0;
  }

  #sections-ai-feature-{{ section.id }} .sections-ai-feature h2 {
    font-weight: bold;
    margin: 0 0 5px 0;
    padding: 0;
    color: {{section.settings.text_color}};
    text-shadow: 0 2px 4px rgba(0,0,0,0.25);
    text-align: left;
  }


  .sections-ai-feature p {
    margin: 0;
    padding: 0;
    text-align: left;
  }

  #sections-ai-feature-{{ section.id }} .sections-ai-feature a.sections-ai-feature-cta {
    display: inline-block;
    padding: 5px 10px;
    background-image: {{section.settings.button_background_color}};
    border-radius: 2px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    font-weight: bold;
    text-shadow: none;
    transition: .25s all;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sections-ai-feature-{{ section.id }}" class="sections-ai-feature-wrap">

<div class="sections-ai-feature">

  <div class="sections-ai-feature-grid">

    {% for block in section.blocks %}
      <div class="sections-ai-feature-col">
        <img class="sections-ai-feature-img" src="{{ block.settings.background_image | image_url: width: 2048 }}">
        <div class="sections-ai-feature-cover"></div>
        <div class="sections-ai-feature-content">
          <h2>{{ block.settings.headline }}</h2>
          <p><a class="sections-ai-feature-cta" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a></p>
        </div>
      </div>
      <!-- /.sections-ai-feature-col -->

      {% endfor %}

  </div>
  <!-- /.sections-ai-feature-grid -->
  
</div>
<!-- /.sections-ai-feature -->

</div>
<!-- /.sections-ai-feature-wrap -->

