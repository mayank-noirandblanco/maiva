<style>

  {{ section.settings.text_font | font_face }}

  #sections-ai-comparison-{{ section.id }}.sections-ai-comparison-wrap div,
  #sections-ai-comparison-{{ section.id }}.sections-ai-comparison-wrap p,
  #sections-ai-comparison-{{ section.id }}.sections-ai-comparison-wrap th,
  #sections-ai-comparison-{{ section.id }}.sections-ai-comparison-wrap td,
  #sections-ai-comparison-{{ section.id }}.sections-ai-comparison-wrap a {
    font-size: {{ section.settings.text_size }};
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sections-ai-comparison-{{ section.id }}.sections-ai-comparison-wrap {
    background-image: {{section.settings.background_color}};
    width: 100%;
  }
  
  #sections-ai-comparison-{{ section.id }} .sections-ai-comparison {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sections-ai-comparison-{{ section.id }} .sections-ai-comparison h2 {
    text-align: center;
    color: {{ section.settings.text_color }};
    font-weight: bold;
    max-width: 1000px;
    margin: 0 auto 25px auto;
    padding: 0;
  }

  .sections-ai-comparison .sections-ai-comparison-grid {
    position: relative;
    margin: 0 auto;
    display: block;
    max-width: 1000px;
  }

  .sections-ai-comparison-row0, .sections-ai-comparison-row {
    display: grid;
    grid-template-columns: 3fr 150px 150px;
    border-bottom: 1px solid {{ section.settings.border_color }};
    gap: 0;
  }

  @media only screen and (max-width: 800px) {
    .sections-ai-comparison-row0, .sections-ai-comparison-row {
      display: grid;
      grid-template-columns: 3fr 100px 100px;
      border-bottom: 1px solid {{ section.settings.border_color }};
      gap: 0;
    }
  }

  .sections-ai-comparison-row0>div, .sections-ai-comparison-row>div {
    padding: {{ section.settings.cell_padding }}px;
  }

  .sections-ai-comparison-row0>div:nth-child(1), .sections-ai-comparison-row>div:nth-child(1) {
    text-align: left;
  }

  .sections-ai-comparison-row0>div:nth-child(2) {
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    font-weight: bold !important;
  }

  .sections-ai-comparison-row0>div:nth-child(2), .sections-ai-comparison-row>div:nth-child(2) {
    text-align: center;
    background-color: {{ section.settings.highlight_background }};
  }

  .sections-ai-comparison-row0>div:nth-child(3), .sections-ai-comparison-row>div:nth-child(3) {
    text-align: center;
  }

  .sections-ai-comparison .sections-ai-comparison-check, .sections-ai-comparison .sections-ai-comparison-x {
    width: 20px;
    height: 20px;
  }

  .sections-ai-comparison .sections-ai-comparison-check g {
    fill: {{ section.settings.check_color }} !important;
  }

  .sections-ai-comparison .sections-ai-comparison-x g {
    fill: {{ section.settings.x_color }} !important;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

