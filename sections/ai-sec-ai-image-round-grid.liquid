<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sections-ai-profile-{{ section.id }}.sections-ai-profile-wrap p,
  #sections-ai-profile-{{ section.id }}.sections-ai-profile-wrap p a {
    font-size: {{ section.settings.text_size }};
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sections-ai-profile-{{ section.id }}.sections-ai-profile-wrap h2 {
    font-size: {{ section.settings.headline_size }};
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }
  
  #sections-ai-profile-{{ section.id }}.sections-ai-profile-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sections-ai-profile-{{ section.id }} .sections-ai-profile {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  .sections-ai-profile .sections-ai-profile-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    position: relative;
    width: 100%;
    z-index: 2;
    align-items: center;
    justify-content: center;
    align-content: start;
  }

  @media only screen and (min-width: 801px) {
    .sections-ai-profile .sections-ai-profile-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    .sections-ai-profile .sections-ai-profile-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  .sections-ai-profile-col {
    position: relative;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  .sections-ai-profile-img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
  }

  .sections-ai-profile-content {
    position: relative;
    z-index: 3;
    padding: 20px 10px;
    text-align: center;
  }

  #sections-ai-profile-{{ section.id }} .sections-ai-profile h2 {
    margin: 0;
    padding: 0;
    text-align: center;
  }

  #sections-ai-profile-{{ section.id }} .sections-ai-profile p {
    margin: 0;
    padding: 0;
    text-align: center;
  }

  #sections-ai-profile-{{ section.id }} .sections-ai-profile .sections-ai-profile-role {
    margin-bottom: 10px;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sections-ai-profile-{{ section.id }}" class="sections-ai-profile-wrap">

<div class="sections-ai-profile">

  <div class="sections-ai-profile-grid">

    {% for block in section.blocks %}
      <div class="sections-ai-profile-col">
        <div class="sections-ai-profile-content">
          <img class="sections-ai-profile-img" src="{{ block.settings.image | image_url: width: 500 }}">
          <h2 class="sections-ai-profile-name">{{ block.settings.name }}</h2>
          <p class="sections-ai-profile-role"><small>{{ block.settings.role }}</small></p>
          <p class="sections-ai-profile-background">{{ block.settings.background }}</p>
        </div>
      </div>
      <!-- /.sections-ai-profile-col -->

      {% endfor %}

  </div>
  <!-- /.sections-ai-profile-grid -->
  
</div>
<!-- /.sections-ai-profile -->

</div>
<!-- /.sections-ai-profile-wrap -->

